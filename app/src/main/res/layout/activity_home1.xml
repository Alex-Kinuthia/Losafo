<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.losafo.Home.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--top toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">
            <include layout="@layout/layout_top_tabs"/>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffff"
            android:weightSum="1">

            <ImageView
                android:layout_width="124sp"
                android:layout_height="124sp"
                android:id="@+id/icon"
                android:src="@drawable/icon"
                android:height="180sp"
                android:width="180sp"
                android:layout_marginTop="30dp"
                tools:src="@drawable/icon"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="WELCOME"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/wlc"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffff"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtli"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_below="@+id/wlc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="80dp"
                android:background="#fff"
                android:drawableRight="@drawable/ic_border_color_black_24dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="Register Account"
                android:textColor="#f40000"
                android:textSize="16dp" />


            <TextView
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:text="Login Account"
                android:drawableRight="@drawable/ic_vertical_align_bottom_black_24dp"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#0a7e15"
                android:id="@+id/txttv"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/wlc"
                android:background="#fff"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>